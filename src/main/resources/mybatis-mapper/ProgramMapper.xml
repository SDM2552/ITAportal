<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.izo.itaportal.repository.ProgramRepository">
    <select id="selectProgram" resultType="com.izo.itaportal.model.Program">
        select * from program
    </select>

    <select id="selectProgramById" resultType="com.izo.itaportal.model.Program">
        select * from program where id_pgm=#{idPgm}
    </select>

    <insert id="insert">
        insert into program (id_pgm,
                             id_cate,
                             id_prof,
                             pgm_name,
                             st_dt,
                             end_dt,
                             pgm_target,
                             id_room,
                             pgm_method,
                             pgm_per,
                             pgm_fee)
                    values (#{idPgm},#{idCate},#{idProf},#{pgmName},#{stDt},#{endDt},
                                 #{pgmTarget},#{idRoom},#{pgmMethod},#{pgmPer},#{pgmFee})

    </insert>
    <update id="update">
        update program
        set pgm_name = #{pgmName},
            id_cate = #{idCate},
            pgm_name = #{pgmName},
            st_dt=#{stDt},
            end_dt=#{endDt},
            pgm_target=#{pgmTarget},
            id_room=#{idRoom},
            pgm_method=#{pgmMethod},
            pgm_per=#{pgmPer},
            pgm_fee=#{pgmFee},
            id_prof=#{idProf}

        where id_pgm = #{idPgm}
    </update>

    <delete id="delete">
        delete from program
        where id_pgm = #{idPgm}
    </delete>


    <!-- 강사용 강의리스트 조회 쿼리 @김봄이 -->
    <select id="selectPgmForProf" parameterType="integer" resultType="com.izo.itaportal.model.Program">
        SELECT * FROM program WHERE id_prof=#{idProf}
    </select>

</mapper>
