<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.izo.itaportal.repository.StepRepository">

    <!-- 사용자 추가 -->
    <insert id="insertStaff" parameterType="com.izo.itaportal.model.User">
        INSERT INTO users (loginId, password, role, registDate)
        VALUES (#{loginId}, #{password}, #{role}, NOW())
    </insert>

    <!-- 로그인 정보로 사용자 검색 -->
    <select id="findUserByLoginIdAndPassword" resultType="com.izo.itaportal.model.User">
        SELECT * FROM users WHERE loginId = #{loginId} AND password = #{password}
    </select>

    <!-- 공지사항 목록 조회 -->
    <select id="findAllNotices" resultType="com.izo.itaportal.model.Notice">
        SELECT * FROM notices
    </select>

    <!-- 공지사항 신규 추가 -->
    <insert id="insertNotice" parameterType="com.izo.itaportal.model.Notice">
        INSERT INTO notices (title, content, datePosted)
        VALUES (#{title}, #{content}, NOW())
    </insert>

    <!-- 특정 공지사항 조회 -->
    <select id="findNoticeById" resultType="com.izo.itaportal.model.Notice">
        SELECT * FROM notices WHERE idNotice = #{idNotice}
    </select>

    <!-- 공지사항 수정 -->
    <update id="updateNotice">
        UPDATE notices SET title = #{title}, content = #{content} WHERE idNotice = #{idNotice}
    </update>

    <!-- 공지사항 삭제 -->
    <delete id="deleteNotice">
        DELETE FROM notices WHERE idNotice = #{idNotice}
    </delete>

</mapper>

